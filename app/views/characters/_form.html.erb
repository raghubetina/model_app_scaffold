<%= form_for @character, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">

    <%= f.label :name, :class => 'control-label' %>

    <div class="controls">

      <%= f.text_field :name, :class => 'text_field' %>

    </div>

  </div>

  <div class="control-group">

    <%= f.label :movie_id, :class => 'control-label' %>

    <div class="controls">

      <%= f.collection_select :movie_id, Movie.all, :id, :title %>

    </div>

  </div>

  <div class="control-group">

    <%= f.label :actor_id, :class => 'control-label' %>

    <div class="controls">

      <%= f.collection_select :actor_id, Actor.all, :id, :name %>

    </div>

  </div>



  <div class="form-actions">

    <%= f.submit nil, :class => 'btn btn-primary' %>

    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),

                characters_path, :class => 'btn' %>

  </div>

<% end %>
